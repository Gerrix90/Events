<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="AppTheme.Events" parent="AppTheme" >
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/enter_event</item>
        <item name="android:windowExitTransition">@null</item>
        <item name="android:windowReturnTransition">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

</resources>
